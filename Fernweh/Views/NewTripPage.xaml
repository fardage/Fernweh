<?xml version="1.0" encoding="UTF-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fernweh.Views.NewItemPage"
             xmlns:viewmodels="clr-namespace:Fernweh.ViewModels"
             Title="New Item" x:DataType="viewmodels:NewTripViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Destination" FontSize="Large" />
            <Entry Text="{Binding NewTrip.Destination}" FontSize="Small" />

            <Label Text="Start Date:" FontSize="Medium" />
            <DatePicker Date="{Binding NewTrip.StartDate}" />

            <Label Text="End Date:" FontSize="Medium" />
            <DatePicker Date="{Binding NewTrip.StartDate}" />

            <Button Text="Next" Clicked="Next_Clicked" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>